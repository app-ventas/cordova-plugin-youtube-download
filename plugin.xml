 <?xml version="1.0" encoding="UTF-8"?>

    <plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
            id="cordova-plugin-youtube-download" version="0.0.1.">

    <name>YouTubeDownloader</name>
    <description>Cordova Plugin to download YouTube videos</description>
    <license>Apache 2.0</license>
    <keywords>cordova, youtube, downloader</keywords>
    
    <js-module src="www/YoutubeDownloadClient.js" name="SMTPClient">
        <clobbers target="YoutubeDownloadClient" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <!-- Cordova >= 3.0.0 -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="YoutubeDownloadClient">
                <param name="android-package" value="com.cordova.youtube.YoutubeDownloadClient"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
			<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>        
        <source-file src="src/android/com/cordova/youtube/YoutubeDownloadClient.java" target-dir="src/com/cordova/youtube" />
    
    </platform>
</plugin>
